<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.geocraft.ui.viewer.preferences.PlotPreferencePage"
            id="org.geocraft.ui.viewer.plotpreferences"
            name="Plot layout">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.geocraft.ui.viewer.category"
            name="Viewers">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.geocraft.ui.viewer.ViewerPerspective"
            fixed="false"
            icon="icons/folder.png"
            id="Viewer.perspective"
            name="Viewers">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.geocraft.ui.viewer.DataViewerPreferences"
            id="org.geocraft.ui.viewer.dataviewer.preferences"
            name="Data Viewers">
      </page>
   </extension>

</plugin>
