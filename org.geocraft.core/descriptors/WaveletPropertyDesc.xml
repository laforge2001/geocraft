<?xml version="1.0" encoding="UTF-8"?>
<!-- Define the properties for a data file entity and their categories. -->
<entity-properties entity="Wavelet">
	<!-- There are no properties at the top of the property tree -->
    <category name="" />
	
    <category name="File">
        <property id="ProjectName" display="Project"/>
        <property id="LastModifiedDate" display="Modification date"/>
        <property id="isDirty" display="Dirty?"/>
    </category>
    
    <category name="Data">
        <property id="DataType" display="Type"/>
        <property id="NumSamples" display="# of samples"/>
        <property id="Phase" display="Phase"/>

    </category>
    
    <category name="Values">
        <property id="MinimumValue" display="Min"/>
        <property id="MaximumValue" display="Max"/>
    </category>
	
    <category name="Time">
        <property id="TimeStart" display="Start"/>
        <property id="TimeEnd" display="End"/>
        <property id="TimeInterval" display="Interval"/>
    </category>
    
    <category name="General">
        <property id="Comment" display="Comments"/>
    </category>
	
	<!-- Excluded displayable properties -->
	<exclude>
		<property id="EntityType" display="Entity type" />
		<property id="DisplayName" display="Display name" />
	</exclude>

</entity-properties>
